<% if aacs.present? %>
  <div class="ic-Login_sso">
    <h4 class="ic-Login_sso-divider" role="presentation">OR</h4>
    <ul class="ic-Login_sso-list">
      <% aacs.each do |aac| %>
        <% only_one = aacs.size < 2 %>
        <li class="ic-Login_sso-list_item">
          <a href="/login/<%= aac.auth_type %>"
             class="Button Button--primary <%= only_one ? 'ic-Login_sso-button--has-text ' : '' %>ic-Login_sso-button ic-Login_sso-button--<%= aac.auth_type %>">
              <%= render partial: "shared/auth_type_icon",
                         locals: {
                           auth_type: aac.auth_type,
                           sr_message: only_one ? nil : t("Login with %{provider}", provider: aac.auth_type),
                           with_login_text: only_one
                         } %>
          </a>

        </li>
      <% end %>
    </ul>
  </div>
<% end %>
